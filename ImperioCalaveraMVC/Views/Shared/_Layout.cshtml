<!DOCTYPE html>
<html lang="es">

    <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=menu" />
</head>

<body>


    <header>
        @* Inyección de SignInManager y UserManager para lógica condicional *@
        @using Microsoft.AspNetCore.Identity
        @inject SignInManager<Usuario> SignInManager
        @inject UserManager<Usuario> UserManager
        @{
            var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
            var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

        }
		

        @* Navbar con estilo moderno *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-lg">
        <div class="container-fluid px-4">
            @* Logo/Marca de la Aplicación *@
            <a class="navbar-brand fw-bold fs-4 text-white me-3" asp-area="" asp-controller="Home" asp-action="Home">
                Imperio Calavera
            </a>

            @* Botón de Hamburguesa para pantallas pequeñas y medianas *@
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="material-symbols-outlined">
                        menu
                    </span>
            </button>

            @* Contenido Colapsable del Navbar (Enlaces) *@
            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="navbar-nav-wrapper d-flex flex-column flex-lg-row justify-content-lg-end w-100">

                    <ul class="navbar-nav gap-2">
                        @if (SignInManager.IsSignedIn(User))
                        {


                            <li class="nav-item">
                                <a class="nav-link text-white @(currentController == "Home" && currentAction == "Home" ? "active" : "")" asp-controller="Home" asp-action="Home">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white @(currentController == "Citas" ? "active" : "")" asp-controller="Citas" asp-action="Index">Citas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white @(currentController == "Servicios" ? "active" : "")" asp-controller="Servicios" asp-action="Index">Servicios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white @(currentController == "Contacto" ? "active" : "")" asp-controller="Contacto" asp-action="Index">Contacto</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white @(currentController == "Reportes" ? "active" : "")" asp-controller="Reportes" asp-action="Index">Reportes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white @(currentController == "Profile" ? "active" : "")" asp-controller="Profile" asp-action="Index">Mi Perfil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white @(currentController == "Ajustes" ? "active" : "")" asp-controller="Ajustes" asp-action="Index">Ajustes</a>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white @(currentController == "Admin" ? "active" : "")" asp-controller="Admin" asp-action="Users">Administración</a>
                                </li>
                            }
                        }
                    </ul>

                    @* Enlaces de Iniciar Sesión/Cerrar Sesión/Registrarse alineados a la derecha en escritorio *@
                    <ul class="navbar-nav ms-lg-auto d-none d-lg-flex">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form asp-controller="Auth" asp-action="Logout" method="post" id="logoutForm-desktop" class="d-flex">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-light">
                                        Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        }

                    </ul>

                    @* Enlaces de Iniciar Sesión/Cerrar Sesión/Registrarse para móvil (colapsado) *@
                    <ul class="navbar-nav d-lg-none w-100 justify-content-center mt-3 mb-2">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form asp-controller="Auth" asp-action="Logout" method="post" id="logoutForm-mobile" class="d-flex justify-content-center w-100">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-light w-75">
                                        Cerrar Sesión 
                                    </button>
                                </form>
                            </li>
                        }
                       
                       
                    </ul>

                </div> @* Fin de navbar-nav-wrapper *@
            </div>
        </div>
    </nav>

    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>