@model ImperioCalaveraMVC.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Registrarse";
    Layout = null; // No usar layout
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/output.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

     
    </style>
</head>

<body class="bg-gray-100 font-inter min-h-screen flex items-center justify-center py-8">

    <div class="bg-white p-8 rounded-xl shadow-lg w-full max-w-md border border-gray-200 sm:p-10">

        <h2 class="text-3xl font-bold text-center text-gray-800 mb-2">Registrarse</h2>
        <p class="text-center text-gray-600 mb-8">Crea tu nueva cuenta</p>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 text-green-800 border border-green-200 p-3 mb-4 rounded-lg text-sm" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div asp-validation-summary="All" class="text-red-600 text-sm mb-4"></div>

        <form asp-controller="Auth" asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-4">
                <label asp-for="Nombre" class="block text-gray-700 text-sm font-medium mb-2"></label>
                <input asp-for="Nombre" class="shadow-sm appearance-none border border-gray-300 rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" placeholder="Tu nombre completo" />
                <span asp-validation-for="Nombre" class="text-red-600 text-xs mt-1"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-700 text-sm font-medium mb-2"></label>
                <input asp-for="Email" class="shadow-sm appearance-none border border-gray-300 rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" placeholder="tu@ejemplo.com" />
                <span asp-validation-for="Email" class="text-red-600 text-xs mt-1"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="block text-gray-700 text-sm font-medium mb-2"></label>
                <input asp-for="Password" class="shadow-sm appearance-none border border-gray-300 rounded-lg w-full py-3 px-4 text-gray-700 mb-3 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" placeholder="********" />
                <span asp-validation-for="Password" class="text-red-600 text-xs mt-1"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="block text-gray-700 text-sm font-medium mb-2"></label>
                <input asp-for="ConfirmPassword" class="shadow-sm appearance-none border border-gray-300 rounded-lg w-full py-3 px-4 text-gray-700 mb-3 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" placeholder="********" />
                <span asp-validation-for="ConfirmPassword" class="text-red-600 text-xs mt-1"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Telefono" class="block text-gray-700 text-sm font-medium mb-2"></label>
                <input asp-for="Telefono" class="shadow-sm appearance-none border border-gray-300 rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" placeholder="Ej. 123-456-7890" />
                <span asp-validation-for="Telefono" class="text-red-600 text-xs mt-1"></span>
            </div>

            <div class="mb-6">
                <label asp-for="TelefonoEmergencia" class="block text-gray-700 text-sm font-medium mb-2"></label>
                <input asp-for="TelefonoEmergencia" class="shadow-sm appearance-none border border-gray-300 rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" placeholder="Opcional" />
                <span asp-validation-for="TelefonoEmergencia" class="text-red-600 text-xs mt-1"></span>
            </div>

            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg focus:outline-none focus:shadow-outline transition duration-300 transform hover:scale-105 shadow-md">
                Registrarse
            </button>
        </form>

        <div class="mt-6 text-center text-sm">
            <p class="mt-2 text-gray-600">
                ¿Ya tienes una cuenta?
                <a href="/Auth/Index" class="font-medium text-blue-600 hover:text-blue-800 transition duration-200">
                    Inicia sesión aquí
                </a>
            </p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
